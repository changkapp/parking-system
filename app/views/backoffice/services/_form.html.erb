<%= form_for([:backoffice, @service]) do |f| %>
  <%= f.label "Nome do serviço" %>
  <%= f.text_field :name, class: 'form-control' %>
  </br>

  <%= f.label "Preço" %>
  <%= f.text_field :price, class: 'form-control' %>
  </br>

  </br>
  <%= link_to 'Voltar', backoffice_services_path, class: "btn btn-primary" %>
  <%= f.submit "Salvar", class: "btn btn-primary" %>

<% end %>

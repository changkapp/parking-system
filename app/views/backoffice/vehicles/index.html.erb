<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
             <div class="col-lg-12">
                <h2 class="page-header">Vagas Padrões</h2>

                    <% if notice %>
                        <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <%= notice %>
                        </div>
                    <% end %>
                
                <center>
                <%= link_to new_backoffice_vehicle_path, class: "btn btn-outline btn-primary btn-lg " do %>
                    Cadastrar Veículos
                <% end %>
                </center>
                <p></p>

                <p id="notice"><%= notice %></p>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Placa</th>
                                        <th>Cor</th>
                                        <th>Modelo</th>
                                        <th>Email</th>
                                        <th>Observações</th>
                                        <th>Entrada</th>
                                        <th>Status de pagamento</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                  <% @vehicles.each do |vehicle| %>
                                    <tr class="odd gradeX">
                                        <td><%= vehicle.plate %></td>
                                        <td><%= vehicle.color %></td>
                                        <td><%= vehicle.model %></td>
                                        <td><%= vehicle.email %></td>
                                        <td><%= vehicle.observations %></td>
                                        <td><%= l vehicle.created_at, format: :short %></td>
                                        <td><%= I18n.t :"activerecord.enums.vehicle.payment_statuses.#{vehicle.payment_status}" %></td>
                                        <td style="width: 110px;">
                                            <%= link_to edit_backoffice_vehicle_path(vehicle), class: "btn btn-success btn-circle" do %>
                                                <i class="fa fa-edit"></i>
                                            <% end %>

                                            <%= link_to backoffice_vehicle_path(vehicle), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                                                <i class="fa fa-times"></i>
                                            <% end %>

                                            <% if vehicle.payment_status == "paid" %>
                                              
                                              <%= link_to backoffice_vehicle_path(vehicle), method: :show, class: "btn btn-info btn-circle" do %>
                                                  <i class="fa fa-tasks"></i>
                                              <% end %>
                                            
                                            <% else %>
                                              <%= link_to '#', disabled: "disabled", class: "btn btn-info btn-circle" do %>
                                                <i class="fa fa-tasks"></i>
                                              <% end %>
                                            <% end %>
                                        </td>
                                    </tr>
                                  <% end %>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
                <!-- /.panel-body -->
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->